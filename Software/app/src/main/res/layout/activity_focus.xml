<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/full_area"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/background_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#00ff00" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_area"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <SurfaceView
            android:id="@+id/focus_preview"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </SurfaceView>
        <SurfaceView
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00FFFFFF" />

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            android:onClick="onBackButtonClicked"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/back_button"/>
        <TextView
            android:id="@+id/confirm_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="@id/ll_zoom_buttons"
            app:layout_constraintEnd_toEndOf="@id/ll_zoom_buttons"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="20dp"
            android:text="OK"
            android:textColor="@android:color/white" />
        <LinearLayout
            android:id="@+id/ll_zoom_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:id="@+id/zoom_in_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/button_background"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="+"
                android:textColor="@android:color/white" />
            <TextView
                android:gravity="center"
                android:id="@+id/zoom_out_button"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                android:text="-"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <TextView
            android:gravity="center"
            android:id="@+id/red_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/button_background"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/back_button"
            app:layout_constraintBottom_toTopOf="@id/green_button"
            android:text="R"
            android:textColor="@android:color/white" />
        <TextView
            android:gravity="center"
            android:id="@+id/green_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/button_background"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/back_button"
            app:layout_constraintBottom_toTopOf="@id/blue_button"
            android:text="G"
            android:textColor="@android:color/white" />
        <TextView
            android:gravity="center"
            android:id="@+id/blue_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/button_background"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/back_button"
            app:layout_constraintBottom_toTopOf="@id/white_button"
            android:text="B"
            android:textColor="@android:color/white" />
        <TextView
            android:gravity="center"
            android:id="@+id/white_button"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/button_background"
            android:textSize="15sp"
            android:layout_marginBottom="10dp"
            app:layout_constraintStart_toStartOf="@id/back_button"
            app:layout_constraintBottom_toTopOf="@id/back_button"
            android:text="W"
            android:textColor="@android:color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>